<h1>Признаки торгов</h1>

<%= link_to 'Создать признак', new_feature_path, class: "btn btn-info" %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Название</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @features.each do |feature| %>
      <tr>
        <td><%= feature.title %></td>
        <td><%= link_to 'Редактировать', edit_feature_path(feature) %></td>
        <td><%= link_to 'Удалить', feature, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
